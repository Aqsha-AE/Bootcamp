@model BookManagementSystem.Models.Book

@{
    ViewData["Title"] = "Detail Buku";
}

<h1>Detail Buku</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublishedDate)
        </dt>
        <dd class="col-sm-10">
            @Model.PublishedDate.ToString("dd-MM-yyyy")
        </dd>
        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @if (Model.BookGenres != null)
            {
                foreach (var genre in Model.BookGenres)
                {
                    <span class="badge bg-secondary">@genre.Genre.Name</span>
                }
            }
        </dd>
        <dt class="col-sm-2">
            Total Stok
        </dt>
        <dd class="col-sm-10">
            @(Model.Stocks?.Sum(s => s.Quantity) ?? 0) item
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Kembali ke Daftar</a>
</div>